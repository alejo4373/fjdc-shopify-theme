{%- style -%}
  .footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    background-image: url("{{ section.settings.imagen_fondo | asset_url }}");
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer {
      margin-top: {{ section.settings.margin_top }}px;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<footer class="footer color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding page-width">
  <div class="footer__content">
    <div class="footer__content-left">
      <h2 class="footer-block__heading inline-richtext">{{- block.settings.heading -}}</h2>
    </div>
    <div class="footer__content-right">
      {{ section.settings.logo | image_url: width: 600 | image_tag: loading: 'lazy' }}
    </div>
    <div class="footer__content-bottom-wrapper page-width">
      <div class="footer__content-bottom-wrapper page-width">
        <div class="footer__copyright caption">
          <small class="copyright__content"
            >&copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: routes.root_url -}}
          </small>
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "t:sections.footer.name",
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.footer.blocks.heading.name",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    { "type": "text", "id": "titulo", "label": "Titulo", "default": "Titulo" },
    {
      "type": "header",
      "content": "Informacion de contacto"
    },
    { "type": "inline_richtext", "id": "telefono", "label": "Telefono", "default": "123-456-7890" },
    {
      "type": "inline_richtext",
      "id": "direccion",
      "label": "Direccion",
      "default": "Carrara 1 #1-11, Pueblo, Colombia"
    },
    {
      "type": "inline_richtext",
      "id": "nombre_de_contacto",
      "label": "Nombre de contacto",
      "default": "Pepito Perez"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "image_picker",
      "id": "imagen_fondo",
      "label": "Imagen de fondo"
    },
    {
      "type": "number",
      "id": "margin_top",
      "label": "t:sections.footer.settings.margin_top.label",
      "default": 0
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "number",
      "id": "padding_top",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "number",
      "id": "padding_bottom",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "heading"
      }
    ]
  }
}
{% endschema %}
