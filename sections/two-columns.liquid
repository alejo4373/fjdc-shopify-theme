{%- style -%}
    .section-{{ section.id }} {
      position: relative; /* To create a stacking context */
      display: flex;
      justify-content: center;
      align-items: end;
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      height: 1020px;
      margin: 0 auto;
      font-size: 0.5rem;
      width: 100%;
      background: url("{{ 'fondo-azul-2.svg' | asset_url }}");
      background-repeat: no-repeat;
      background-size: auto 100%;
      background-position: center;
    }

    .two-columns {
      display: block;
      width: 100%;
      max-width: 1440px;
      padding: 0 4rem;
    }

    .two-columns__title {
      font-family: 'Iowan Old Style', serif;
      font-size: 10em;
      font-weight: 600;
      text-align: left;
      line-height: 0.883;
      max-width: 400px;
      margin: 20px 0 40px 0;
      letter-spacing: 7px;
    }

    .two-columns__image {
      text-align: center;
    }

    .two-columns__list ul {
      padding: 0;
      margin: 0;
      list-style: none;
      font-size: 25px;
      letter-spacing: -1.5px;
      line-height: 1;
    }

    .two-columns li {
        margin-bottom: 1em;
    }

    .two-columns li:after {
      display: inline-block;
      content: " ";
      height: 12px;
      width: 100%;
      background-repeat: no-repeat;
    }

    .two-columns li:nth-child(4n + 1):after {
      background-image: url("{{ 'linea-subraya-1.svg' | asset_url }}");
    }
    .two-columns li:nth-child(4n + 2):after {
      background-image: url("{{ 'linea-subraya-2.svg' | asset_url }}");
  }
   .two-columns li:nth-child(4n + 3):after {
    background-image: url("{{ 'linea-subraya-3.svg' | asset_url }}");
  }
   .two-columns li:nth-child(4n + 4):after {
    background-image: url("{{ 'linea-subraya-4.svg' | asset_url }}");
  }

  @media screen and (min-width: 425px) {
    .section-{{ section.id }} {
      align-items: center;
    }
  }

  @media screen and (min-width: 768px) {
    .section-{{ section.id }} {
      font-size: 0.9rem;
      height: 1150px;
    }

    .two-columns__image {
      text-align: left;
      padding-left: 7em;
    }

    .two-columns__title {
      font-size: 5.6rem;
    }

    .two-columns__list ul {
      font-size: 35px
    }

  }

  @media screen and (min-width: 1024px) {
    .section-{{ section.id }} {
      font-size: 0.8rem;
      align-items: center;
    }

    .two-columns {
      display: grid;
      gap: 4rem;
      position: relative;
      grid-template-areas: "left right";
      grid-template-columns: 1fr 1fr;
    }

    .two-columns__title {
      font-size: 9.6rem;
    }

    .two-columns__image img {
      height: 400px;
      width: 400px;
      margin-bottom: 24px;
    }

    .two-columns__list ul {
      font-size: 5.5em;
      margin: 27px 0;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }} gradient isolate color-{{ section.settings.color_scheme }}">
  <div class="two-columns">
    <div class="two-columns__left">
      {%- if section.settings.image != blank -%}
        <div class="two-columns__image">
          {{ section.settings.image | image_url: width: 200 | image_tag }}
        </div>
      {%- endif -%}
      <div class="two-columns__text">
        {%- if section.settings.title != blank -%}
          <h2 class="two-columns__title">
            {{ section.settings.title }}
          </h2>
        {%- endif -%}
      </div>
    </div>
    <div class="two-columns__right">
      {%- if section.settings.list_text != blank -%}
        <div class="two-columns__list">
          {{ section.settings.list_text }}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Two columns",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "richtext",
      "id": "list_text",
      "label": "List text",
      "info": "Bulleted list of text",
      "default": "<ul><li>List item 1</li><li>List item 2</li><li>List item 3</li></ul>\n"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Two columns"
    }
  ]
}
{% endschema %}
