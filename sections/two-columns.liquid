{%- style -%}
  .section-{{ section.id }} {
    position: relative; /* To create a stacking context */
    display: flex;
    justify-content: center;
    align-items: end;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    height: 640px;
    margin: 0 auto;
    font-size: 0.5rem;
    width: 100%;
    max-width: 1440px;
    background: url("{{ 'fondo-azul-2.svg' | asset_url }}");
    background-repeat: no-repeat;
    background-size: auto 100%;
    background-position: center;
  }

  .two-columns {
    display: block;
    width: 100%;
    max-width: 1440px;
    padding: 0 2rem;
  }

  .two-columns__title {
    font-family: 'Iowan Old Style', serif;
    font-size: 3rem;
    font-weight: 600;
    text-align: left;
    line-height: 1;
    max-width: 300px;
    margin: 20px 0 40px 0;
  }

  .two-columns__image {
    text-align: center;
  }

  .two-columns__image img {
    height: 140px;
    width: 140px;
  }

  .two-columns__list ul {
    padding: 0;
    margin: 0;
    list-style: none;
    font-size: 1.6rem;
    letter-spacing: -1.5px;
    line-height: 1;
  }

  .two-columns li {
      margin-bottom: 1em;
  }

  .two-columns li:after {
    display: inline-block;
    content: " ";
    height: 12px;
    width: 100%;
    background-repeat: no-repeat;
  }

  .two-columns li:nth-child(4n + 1):after {
    background-image: url("{{ 'linea-subraya-1.svg' | asset_url }}");
  }

  .two-columns li:nth-child(4n + 2):after {
    background-image: url("{{ 'linea-subraya-2.svg' | asset_url }}");
  }

  .two-columns li:nth-child(4n + 3):after {
    background-image: url("{{ 'linea-subraya-3.svg' | asset_url }}");
  }

  .two-columns li:nth-child(4n + 4):after {
    background-image: url("{{ 'linea-subraya-4.svg' | asset_url }}");
  }

  @media screen and (min-width: 425px) {
    .two-columns__image {
      text-align: left;
    }
  }

  @media screen and (min-width: 768px) {
    .section-{{ section.id }} {
      height: 900px;
    }

    .two-columns {
      padding: 0 5rem;
    }

    .two-columns__image {
      padding-left: 7em;
    }

    .two-columns__title {
      font-size: 4.5rem;
    }

    .two-columns__image img {
      width: 29.58vw;
      height: auto;
      margin-bottom: 24px;
    }

    .two-columns__list ul {
      font-size: 2rem;
    }
  }

  @media screen and (min-width: 1024px) {
    .section-{{ section.id }} {
      align-items: center;
    }

    .two-columns {
      display: grid;
      gap: 4rem;
      position: relative;
      top: 30px;
      grid-template-areas: "left right";
      grid-template-columns: 1fr 1fr;
      padding: 0 8rem;
      align-items: center;
      max-width: 1024px
    }

    .two-columns__image img {
      width: 250px;
    }

    .two-columns__title {
      font-size: 6rem;
    }

    .two-columns__list ul {
      font-size: 2.7rem;
      margin: 27px 0;
    }
  }

  @media screen and (min-width: 1440px) {
    .section-{{ section.id }} {
      height: 930px;
    }

    .two-columns {
      max-width: 1117px;
    }

    .two-columns__image img {
      height: auto;
      margin-bottom: 24px;
    }

    .two-columns__title {
      font-size: 7.5rem;
      max-width: 355px;
    }

    .two-columns__list ul {
      font-size: 3.62rem;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }} gradient isolate color-{{ section.settings.color_scheme }}">
  <div class="two-columns">
    <div class="two-columns__left">
      {%- if section.settings.image != blank -%}
        <div class="two-columns__image">
          {{ section.settings.image | image_url: width: 200 | image_tag }}
        </div>
      {%- endif -%}
      <div class="two-columns__text">
        {%- if section.settings.title != blank -%}
          <h2 class="two-columns__title">
            {{ section.settings.title }}
          </h2>
        {%- endif -%}
      </div>
    </div>
    <div class="two-columns__right">
      {%- if section.settings.list_text != blank -%}
        <div class="two-columns__list">
          {{ section.settings.list_text }}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Two columns",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "richtext",
      "id": "list_text",
      "label": "List text",
      "info": "Bulleted list of text",
      "default": "<ul><li>List item 1</li><li>List item 2</li><li>List item 3</li></ul>\n"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Two columns"
    }
  ]
}
{% endschema %}
